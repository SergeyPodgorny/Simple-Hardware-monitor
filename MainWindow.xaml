<Window x:Class="TempsOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Temps"
        Width="160"
        Height="110"
        Topmost="True"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Opacity="0.75">

    <Border Background="#CC1E1E1E" CornerRadius="10" Padding="10">
        <!-- ВАЖНО: x:Name -->
        <StackPanel x:Name="TempPanel"/>
    </Border>
</Window>